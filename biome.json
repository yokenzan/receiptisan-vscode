{
  "$schema": "https://biomejs.dev/schemas/2.4.3/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/out",
      "!**/node_modules",
      "!**/*.vsix",
      "!**/receiptisan",
      "!**/recediff"
    ]
  }
}
